error_reporting(E_ALL & ~E_DEPRECATED & ~E_USER_DEPRECATED);

set_error_handler(static function ($severity, $message, $file, $line) {
    if ($severity & error_reporting()) {
        throw new ErrorException($message, 0, $severity, $file, $line);
    }
});

$possibleFiles = [__DIR__.'/../../autoload.php', __DIR__.'/../autoload.php', __DIR__.'/vendor/autoload.php'];
$file = null;
foreach ($possibleFiles as $possibleFile) {
    if (file_exists($possibleFile)) {
        $file = $possibleFile;

        break;
    }
}

if (null === $file) {
    throw new RuntimeException('Unable to locate autoload.php file.');
}

require_once $file;

use DOM\ORM\Command\InitCommand;
use Silly\Application;
$app = new Application('DOM-ORM CLI Tool', '0.1.0');

$app->command('diagnose [-p|--print]', function (OutputInterface $output, $print, $plain) {
    $output->writeln('Initializing database...');

    InitCommand::run();

    $output->writeln('Diagnostics output has been copied to your clipboard.');
})->descriptions('Output diagnostics to aid in debugging Valet.', [
    '--print' => 'print diagnostics output while running',
    '--plain' => 'format clipboard output as plain text',
]);

$app->setDefaultCommand('init');
$app->run();

__HALT_COMPILER();